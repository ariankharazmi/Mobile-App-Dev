<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListApp.Views.ContactDetailsPage">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Contact Details" FontSize="Large" />

            <Label Text="Name:" FontAttributes="Bold" />
            <Label Text="{Binding SelectedContact.Name}" />

            <Label Text="Email:" FontAttributes="Bold" />
            <Label Text="{Binding SelectedContact.Email}" />

            <Label Text="Phone:" FontAttributes="Bold" />
            <Label Text="{Binding SelectedContact.PhoneNumber}" />

            <Label Text="Description:" FontAttributes="Bold" />
            <Label Text="{Binding SelectedContact.Description}" />

            <Button Text="Back" 
                    Command="{Binding GoBackCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>